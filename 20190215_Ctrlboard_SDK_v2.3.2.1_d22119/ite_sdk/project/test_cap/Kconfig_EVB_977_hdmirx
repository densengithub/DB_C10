#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config TEST_CAP
    bool
    default y
    select HAVE_LCD
    select HAVE_GRAPHICS
    select HAVE_VIDEO
    select HAVE_AUDIO

config CMAKE_SOURCE_DIR
    string
    option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT977
    def_bool y

config DEF_CHIP_REV_A0
    def_bool y

config DEF_CPU_FA626
    def_bool y

config RAM_SIZE
    default "0x4000000"

config RAM_INIT_SCRIPT
    default "IT970A0_396Mhz_DDR2_200Mhz.scr"

config LCD_ENABLE
    def_bool n

config BACKLIGHT_ENABLE
    def_bool n

config DBG_INIT_SCRIPT
    default "IT970A0_396Mhz_DDR2_200Mhz.txt"

config I2C1_ENABLE
    def_bool y

config GPIO_IIC1_CLK
    default "41"

config GPIO_IIC1_DATA
    default "40"

config GPIO_IIC1_MODE
    default "1"

config UART0_ENABLE
    def_bool n

config UART1_ENABLE
    def_bool y

config GPIO_UART1_TX
    default "4"

config GPIO_UART1_RX
    default "-1"

#config BUILD_FFMPEG
#    def_bool y

config CAPTURE_DEFINE
    default "EVB_977_HDMIRX.txt"

config SENSOR_ENABLE
    def_bool n

config HDMI_RX_ENABLE
    def_bool y

config DEF_HDMIRX_IIC1
    def_bool y

config VIDEO_ENABLE
    def_bool y

config STC_ENABLE
    def_bool y

config FS_FAT
    def_bool y

config ITU_UCL_ENABLE
    def_bool y

config BUILD_INIPARSER
    def_bool y

config BUILD_ITU
    def_bool y

config BUILD_SDL
    def_bool y

config TASK_DRIVE_PROBE
    def_bool y

config RECORD_VIDEO
    def_bool y

config AUDIO_DAC_MODULE
    default "itp_dac_ite970.c"

config AUDIO_CODEC_MP3DEC
    def_bool y

config AUDIO_CODEC_WAV
    def_bool y

config AUDIO_CODEC_WMADEC
    def_bool y

config COMPRESS_AUDIO_PLUGIN
    def_bool y

config BUILD_AUDIO_MGR
    def_bool y

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"


menu "CAP TEST FUNCTION"

    choice
        prompt "Test CAP"
        default CAP_HDMIRX_MODE

    config CAP_SENSOR_MEM_MODE
        bool "CAP_SENSOR_MEM_MODE"
        help
            Peripheral->SENSOR ENABLE = true
    config CAP_HDMIRX_MODE
        bool "CAP_HDMIRX_MODE"
        help
            Peripheral->HDMI RX ENABLE = true
    config CAP_MODULE_MODE
        bool "CAP_MODULE_MODE"
        help
            Peripheral->CAPTURE_MODULE_ENABLE = true
    endchoice

endmenu

