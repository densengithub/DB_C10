#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config TEST_GPIO
    bool
    default y

config CMAKE_SOURCE_DIR
	string
	option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT976
    def_bool y

config DEF_CHIP_REV_A0
    def_bool y  

config RAM_SIZE
    default "0x4000000"

config RAM_INIT_SCRIPT
    default "IT970A0_396Mhz_DDR2_200Mhz.scr"
    
config UART0_ENABLE
    def_bool y

config GPIO_UART0_TX
    default "4"

config GPIO_UART0_RX
    default "-1"

config DEF_DBG_UART0
    def_bool y

config DBG_INIT_SCRIPT
    default "IT970A0_396Mhz_DDR2_200Mhz.txt"
    

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"

menu "GPIO Test"

choice
	prompt "Test GPIO"
	default TEST_GPIO_INPUT

config TEST_GPIO_INPUT
	bool "TEST_GPIO_INPUT"
	config GPIO_TEST_INPUT_PIN
        string "INPUT_PIN"
        depends on TEST_GPIO_INPUT
        default 5
	
config TEST_GPIO_OUTPUT_TO_INPUT
	bool "TEST_GPIO_OUTPUT_TO_INPUT"
	config GPIO_TEST_INPUT_PIN
        string "INPUT_PIN"
        depends on TEST_GPIO_OUTPUT_TO_INPUT
        default 5
	config GPIO_TEST_OUTPUT_PIN
        string "OUTPUT_PIN"
        depends on TEST_GPIO_OUTPUT_TO_INPUT
        default 6

config TEST_GPIO_INTERRUPT
	bool "TEST_GPIO_INTERRUPT"
	config GPIO_TEST_INTR_PIN
        string "INTR_PIN"
        depends on TEST_GPIO_INTERRUPT
        default 5
		
config TEST_GPIO_EX_4
	bool "TEST_GPIO_EX_4"

endchoice

endmenu
